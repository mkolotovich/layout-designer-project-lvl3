    }],

    "Д": [{
      name: "Джедай Падаванов",
      status: "Был онлайн вчера",
      avatar: "/images/avatar_2.jpg"
    }],

    "К": [{
      name: "Кодовёнок Хекслетович",
      status: "Был онлайн 3 часа назад",
      avatar: "/images/avatar_1.jpg"
    },
    {
      name: "Королева Верстальщина",
      status: "Была онлайн вчера",
      avatar: "/images/avatar_5.jpg"
    }],

    "П": [{
      name: "Питонист Джангович",
      status: "Был онлайн вчера",
      avatar: "/images/avatar_6.jpg"
    }],
  }
- var count = 0;
ul.list-unstyled.contacts-list
  each val, key in contacts
    each value in val
      li.d-flex.flex-column
        if key != ''
          span.text-muted.pt-5.header-alphabet= key
          a.href.d-flex.text-decoration-none.align-items-center.contact
            img(src= value.avatar.slice(1), alt="avatar" width="50" height="50").rounded-circle.contacts-avatar.ml-3
            div.pl-4
              p.mb-0
                b.text-dark.contact-name= value.name
              small.text-secondary.contact-status= value.status
          if key == "К"
            if count != 0 
              -key= key
              -count = count + 1
            else
              -key= ''
        else
          span.text-muted.pt-3= key
          a.href.d-flex.text-decoration-none.align-items-center.contact
            img(src= value.avatar.slice(1), alt="avatar" width="50" height="50").rounded-circle.contacts-avatar.ml-3
            div.pl-4
              p.mb-0
                b.text-dark.contact-name= value.name
              small.text-secondary.contact-status= value.status