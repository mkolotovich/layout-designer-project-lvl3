mixin search(name, placeholder, classes)
  form(class=classes)
    div.form-group
      label.h2.d-block.font-weight-bold=name
        input(type="search" placeholder=placeholder class="p-4 border-top-0 border-right-0 border-left-0 form-control form-control-lg mt-4 shadow-none rounded-0 border-gray")