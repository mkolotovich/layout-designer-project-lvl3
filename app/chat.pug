<!DOCTYPE html>
html(lang="ru").h-100
  head
    - var page = "chat"
    - var title = "Вениамин Редакторович - Hexlet Messenger"
    include pug/head.pug
  body.h-100
    div.container-xxl.px-0.py-xl-4.px-0.px-xl-4.h-100
      div.row.radius-xl.mx-0.h-100
        div.col-xl-4.border-xl-right.px-xl-4.pl-4.pr-3.h-100.hide-scrollbar
          include pug/header.pug
          div.h-100.d-flex.flex-column.tab-content
            +header('index.html', 'd-flex header radius-xl-left-top bg-primary mx-xl-n4 align-items-center')
            include pug/contact.pug
            +contacts('tab-pane fade hide-scrollbar h-100')
            include pug/messages-preview.pug
            +messages-preview('list-unstyled message-list tab-pane fade show active h-100','chats')
            include pug/profile.pug
            include pug/chat-mobile.pug
            +chat-mobile('tab-content d-xl-none tab-pane fade ml-n4 mr-n3')
        div.col-xl-8.d-none.d-xl-block.pr-5.h-100.pl-xl-0
          +chat-mobile('tab-content h-100 hide-scrollbar')
    include pug/scripts.pug